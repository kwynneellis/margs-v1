<div class="container">
  <div class="p-2 text-center">
    <h1>Margate awaits!</h1>
    <h6>⭐️ ⭐️ ⭐️ ⭐️ ⭐️</h6>
    <h6>"I Kent get enough", Boadhi - <%= 1.month.ago.strftime("%b %Y") %></h6>
  </div>

  <%= render "images_grid" %>

  <div class="row">
    <div class="container border-bottom p-2 m-1 d-flex justify-content-between">
      <div>
        <h4><%= @property.title %></h4>
        <h6><%= @property.max_guests %> guests | 
            <%= @property.bedrooms %> double bedrooms | 
            <%= @property.bathrooms %> bathrooms | 
            Kitchen & living |
            Dedicated workspace
            <% if @property.pet_friendly? %>
              <%= "| Pets encouraged 🐾" %>
            <% end %></h6>
      </div>  
      <div>
        <%= image_tag "profile.jpeg", alt: "Profile image", class: "avatar-large" %>
      </div>  
    </div>

    <div class="container p-2 m-1">
      <p><%= simple_format(@property.description) %></p>
    </div>
  </div>

  <%= render "location" %>

  <%= render "amenities" %>

  <%= render "things_to_know" %>

</div>