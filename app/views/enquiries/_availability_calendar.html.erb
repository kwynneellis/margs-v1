<div class="booking-calculator-container container p-3 m-1">
  <%= turbo_frame_tag 'calendar' do %>
    <%= month_calendar(events: @bookings) do |date, bookings| %>
      <div class="day">
        <div class="date"><%= date.day %></div>

        <% bookings.each do | booking | %>
          <div class="booking">
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>