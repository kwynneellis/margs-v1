<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <%= link_to property_enquiries_path(property_id: @property.id), class: "text-decoration-none text-reset" do %>
        <div class="m-2">
          <i class="fa-solid fa-arrow-left"></i> All enquiries
        </div>
      <% end %>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col">
              <h5 class="card-title"><%= @enquiry.first_name.capitalize %> <%= @enquiry.last_name.capitalize %></h5>
            </div>
            <div class="col-1">
                <%= link_to property_enquiry_path(property_id: @property.id, id: @enquiry),
                  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none text-reset"  do %>
                    <i class="fa-solid fa-trash"></i>
                <% end %>
            </div>
          </div>
          <p class="card-text text-secondary fw-light">Enquired at <%= @enquiry.created_at.strftime("%H:%M %d-%m-%y") %></p>
        </div>
        <ul class="list-group list-group-flush">

          <li class="list-group-item">
            <div class="row">
              <div class="col-3">Message:</div>
              <div class="col"><%= @enquiry.message %></div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col-3">Referred by:</div>
              <div class="col"><%= @enquiry.referral %></div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col-3">Nights:</div>
              <div class="col"><%= (@enquiry.check_out - @enquiry.check_in).to_i %></div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col-3">Check-in:</div>
              <div class="col"><%= @enquiry.check_in.strftime("%a %d %b %Y") %></div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col-3">Check-out:</div>
              <div class="col"><%= @enquiry.check_out.strftime("%a %d %b %Y") %></div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col-3">Guests:</div>
              <div class="col"><%= @enquiry.guests %></div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col-3">Pets:</div>
              <% if @enquiry.with_pets %>
                <div class="col">Yup 🐾</div>
              <% else %>
                <div class="col">Nope</div>
              <% end %>
              </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col-3">Email:</div>
              <div class="col"><%= @enquiry.email %></div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col-3">Mobile:</div>
              <div class="col"><%= @enquiry.mobile %></div>
            </div>
          </li>

        </ul>
      </div>
    </div>
  </div>
</div>
