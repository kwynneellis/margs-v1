<div class="simple-calendar">
  <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></time>
  <div class="d-flex align-items-center justify-content-between">
    <div class="calendar-heading">
      <nav class="d-flex justify-content-between">
        <div class="btn btn-outline-secondary my-3"><%= link_to t('simple_calendar.previous', default: '<'), calendar.url_for_previous_view, class: "text-decoration-none text-reset" %></div>
        <div class="btn btn-outline-secondary my-3"><%= link_to t('simple_calendar.today', default: 'Today'), calendar.url_for_today_view, class: "text-decoration-none text-reset" %></div>
        <div class="btn btn-outline-secondary my-3"><%= link_to t('simple_calendar.next', default: '>'), calendar.url_for_next_view, class: "text-decoration-none text-reset" %></div>
      </nav>
    </div>
    <% if user_signed_in? %>
        <%= link_to new_property_booking_path(property_id: @property.id) do %>
          <button class="btn booking-calc-btn">Add + </button>
        <% end %>
      <% else %>
      <div></div>
      <% end %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
